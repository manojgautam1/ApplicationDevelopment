@page "/debt"
@using MudBlazor
@using System.ComponentModel.DataAnnotations


<MudText Typo="Typo.h3" Class="mud-width-full" Style="@($"color:{Colors.Shades.Black}")">Debt Addition</MudText>
<EditForm Model="@debt">
    <DataAnnotationsValidator />

    <MudGrid>
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Title" HelperText="" Class="mt-3"
                                  @bind-Value="debt.Title" For="@(() => debt.Title)" />
                    <MudTextField Label="Lender" HelperText="Source of Debt" Class="mt-3"
                                  @bind-Value="debt.Creditor" For="@(() => debt.Creditor)" />
                    <MudTextField Label="Amount" HelperText="Amount" Class="mt-3" @bind-Value="debt.Amount" Required="true" />
                    <MudDatePicker @bind-Value="debt.DueDate" Label="Due Date" Required="true" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddDebt">Add</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>
<br/>
<br/>
<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h5" Align="Align.Center">Manage Debts</MudText>


        <MudTable Items="Debts" Dense="true" Hover="true" Bordered="true">
            <HeaderContent>
                <MudTh>Lender</MudTh>
                <MudTh>Title</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh>Taken Date</MudTh>
                <MudTh>Due Date</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.Creditor</MudTd>
                <MudTd>@context.Title</MudTd>
                <MudTd>@context.Amount</MudTd>
                <MudTd>@context.takenDate.ToShortDateString()</MudTd>
                <MudTd>@context.DueDate.ToShortDateString()</MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

